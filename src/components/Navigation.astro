---
import logo from "../assets/logo3.svg";
---

<header>
   
    <nav class="header-nav relative flex justify-between items-center mt-3">
        <!-- Logo -->
        <a href="/" class="logo cursor-pointer ">
            <img
                src={logo.src}
                alt="Logo"
                class="w-[140px] h-[140px] mt-[-30px] "/>
        </a>

        

        <!-- Input for Hamburger Menu -->
        <input type="checkbox" id="menu-toggle" class="menu-toggle hidden " />
        <label for="menu-toggle" class="icon block cursor-pointer text-2xl md:hidden ">
            &#9776;
        </label>

        <!-- Menu -->
        <ul
            class="menu hidden flex-col absolute top-full left-0 w-full shadow-lg md:flex md:flex-row md:space-x-4 md:static md:w-auto md:shadow-none"
        >
            <li class="list-item text-2xl">
                <a href="/" class="text-gray-700 hover:text-white-900">Haupt</a>
            </li>
            <li class="list-item text-2xl">
                <a href="#ft" class="text-gray-700 hover:text-gray-700">ِKontakt</a>
            </li>
            <li class="list-item text-2xl">
                <a href="./bucher.html" class="text-gray-700 hover:text-white-900">Kurs</a>
            </li>
            <li class="list-item text-2xl">
                <a href="/galerie" class="text-gray-700 hover:text-white-900">Galerie</a>
            </li>
        </ul>
    </nav>

    <h1 class="absolute top-[15%] left-[50%] transform -translate-x-1/2 -translate-y-1/2 text-white text-4xl md:text-5xl font-bold ">
        GEORGIEN
    </h1>
    

</header>

<style>
    /* Header Styles */
    header {

        background-image: 
         /* Farbschicht */
        url(../assets/images/266.jpg); /* Bild */
        background-size: cover;
        background-position: center;
        width: 100%;
        height: 70vh;
       
    }

   

    /* Hamburger Menu Logic */
    .menu-toggle:checked ~ .menu {
        display: flex;
      
    }

    /* Menü: Mobile */
    .menu {
        display: none;
        top: 13rem;
        left: 50%;
        transform: translateX(-50%);
        width: 50vw;
        height: auto;
        color: black;
        padding: 1rem;
        border-radius: 0.5rem;
        z-index: 100;
        background-image: url(../src/assets/images/25.jpg);
        background-size: cover;
        background-position: ;
        width: 50%;
        height: 30vh;
    }

    .menu li {
        text-align: center;
    }

    a {
        color: black;
        display: block;
        padding: 0.5rem;
        transition: color 0.3s ease;
    }

    a:hover {
        color: white;
    }

    /* Icon Styles */
    .icon {
        display: block;
        text-align: right;
        margin-right: 1rem;
        font-size: 2rem;
        padding: 0.5rem;
        cursor: pointer;
        color: #213510;
    }

    

    /* Menü: Desktop */
    @media (min-width: 768px) {
        .menu {
            display: flex;
        justify-content: end;
        position: static; /* Verhindert absolute Positionierung */
        width: auto;
        height: auto;
        background-image: none;
        left: auto;
        right: 0;
        transform: none;
        }

        .menu li:hover {
            transform: scale(1.1);
            filter: drop-shadow(0 0 0.75rem #131312);
        }

        .icon {
            display: none;
        }
    }
</style>
